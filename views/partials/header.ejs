<body>
    <nav class="navbar">
        <div class="nav-content">
            <a href="/posts" class="nav-brand">NodeNest</a>
            <div class="nav-links">
                <% if (typeof user !=='undefined' && user) { %>
                    <span style="color: #94a3b8; font-size: 0.9rem; margin-right: 1rem;">Welcome, <%= user %></span>
                    <a href="/posts">Home</a>
                    <a href="/posts/new">New Post</a>
                    <a href="/logout" style="color: #ef4444;">Logout</a>
                    <% } else { %>
                        <a href="/signin">Sign In</a>
                        <a href="/signup" class="btn btn-primary"
                            style="margin-left: 1rem; padding: 0.5rem 1rem; color: white;">Sign Up</a>
                        <% } %>
            </div>
        </div>
    </nav>
