<%- include('../partials/header') %>

    <div class="card" style="max-width: 600px; margin: 0 auto;">
        <h1 style="border-bottom: 1px solid var(--glass-border); padding-bottom: 1rem; margin-bottom: 2rem;">Edit Post
        </h1>

        <form action="/posts/<%= post.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="<%= post.title %>" required>
            </div>

            <div class="form-group">
                <label for="content">Content</label>
                <textarea id="content" name="content" rows="10" required><%= post.content %></textarea>
            </div>

            <div class="actions">
                <button type="submit" class="btn btn-primary">Update Post</button>
                <a href="/posts/<%= post.id %>" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

    <%- include('../partials/footer') %>